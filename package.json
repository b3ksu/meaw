{
  "name": "meaw",
  "version": "8.0.1",
  "description": "Utilities for Unicode East Asian Width",
  "keywords": [
    "unicode",
    "east",
    "asian",
    "width"
  ],
  "repository": "https://github.com/susisu/meaw.git",
  "author": "Susisu <susisu2413@yahoo.co.jp>",
  "license": "MIT",
  "type": "module",
  "main": "lib/index.cjs",
  "module": "lib/index.js",
  "types": "lib/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "default": "./lib/index.js",
        "types": "./lib/index.d.ts"
      },
      "require": {
        "default": "./lib/index.cjs",
        "types": "./lib/index.d.cts"
      }
    }
  },
  "files": [
    "lib",
    "src",
    "!src/**/*.spec.ts",
    "!src/**/__tests__"
  ],
  "scripts": {
    "fetch": "tsx --tsconfig tsconfig.scripts.json scripts/fetch.ts",
    "generate": "tsx --tsconfig tsconfig.scripts.json scripts/generate.ts",
    "generate-test": "tsx --tsconfig tsconfig.scripts.json scripts/generate.ts test",
    "dump-eaw-version": "tsx --tsconfig tsconfig.scripts.json scripts/dump-eaw-version.ts",
    "lint": "run-s lint:eslint lint:prettier",
    "lint-fix": "run-s lint-fix:eslint lint-fix:prettier",
    "lint:eslint": "eslint '*.js' scripts src",
    "lint-fix:eslint": "eslint --fix '*.js' scripts src",
    "lint:prettier": "prettier --check '*.js' scripts src",
    "lint-fix:prettier": "prettier --write '*.js' scripts src",
    "typecheck": "run-s typecheck:*",
    "typecheck:main": "tsc -p tsconfig.json --noEmit",
    "typecheck:scripts": "tsc -p tsconfig.scripts.json --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "build": "tsup",
    "prepublishOnly": "run-s generate lint test build"
  },
  "devDependencies": {
    "@susisu/eslint-config": "^0.0.67",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jest-formatting": "^3.1.0",
    "globals": "^13.21.0",
    "jest": "^29.7.0",
    "node-fetch": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "tsup": "^7.2.0",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2"
  }
}
