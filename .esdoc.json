{
  "source": "src",
  "excludes": ["\\.test\\.js$"],
  "destination": "doc",
  "plugins": [
    {
      "name": "esdoc-standard-plugin",
      "option": {
        "brand": {
          "title": "meaw",
          "site": "https://github.com/susisu/meaw",
          "repository": "https://github.com/susisu/meaw.git"
        },
        "accessor": {
          "access": ["public", "protected"],
          "autoPrivate": true
        },
        "test": {
          "source": "src",
          "interfaces": ["describe", "context", "it", "specify", "suite", "test"],
          "includes": ["\\.test\\.js$"]
        }
      }
    },
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "replaces": [{ "from": "^src/.*\\.js$", "to": "lib/meaw.cjs.js" }]
      }
    }
  ]
}
